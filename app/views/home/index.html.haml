#main
  = simple_form_for @url do |f|
    - if @url.errors.any?
      #error_explanation
        %h2= "#{pluralize(@url.errors.count, "error")} prohibited this url from being saved:"
        %ul
          - @url.errors.full_messages.each do |msg|
            %li= msg
    %section#url_field
      = f.input :url, :as => "string",  :label => 'Enter a URL to shorten', :placeholder => 'Enter a URL beginning with http://', :id => 'main-url-box'
      = f.button :submit,  :class => 'btn btn-primary'
    .clearfix
